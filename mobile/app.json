{
  "expo": {
    "name": "TrackMyFlight",
    "slug": "trackmyflight",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.trackmyflight.app",
      "buildNumber": "1.0.0",
      "jsEngine": "hermes",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TrackMyFlight needs location access to show nearby flights and provide better tracking experience.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TrackMyFlight needs location access to provide continuous flight tracking updates.",
        "NSCameraUsageDescription": "TrackMyFlight uses camera for AR mode to identify planes overhead.",
        "NSMicrophoneUsageDescription": "TrackMyFlight may use microphone for voice commands."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.trackmyflight.app",
      "versionCode": 1,
      "jsEngine": "hermes",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "VIBRATE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow TrackMyFlight to use your location for better flight tracking experience."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow TrackMyFlight to access your camera for AR plane identification."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "defaultChannel": "flight-alerts"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain"
        }
      ]
    ],
    "scheme": "trackmyflight",
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id-here"
    }
  }
}
